<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50000000"/> <!-- Color de la sombra (negro con opacidad) -->
            <corners android:radius="12dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Fondo del botÃ³n -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColor"/> <!-- Color del fondo -->
            <corners android:radius="12dp"/> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="@color/textColorPrimary"/> <!-- Borde -->
        </shape>
    </item>
</layer-list>
